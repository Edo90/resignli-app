@using Microsoft.AspNetCore.Authorization
@using WebApp.Clients
@using WebApp.Dtos
@using WebApp.Components

@page "/employees"

@attribute [Authorize]

@inject EmployeeClient EmployeeClient
@inject NavigationManager Nav

<h3>Employees</h3>

<button class="btn btn-primary mb-3"
        @onclick='@(() => Nav.NavigateTo("/employees/add"))'>
    Add
</button>

@if(employees == null)
{
    <p>Loading</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Identity #</th>
                <th>Birthdate #</th>
                <th>Email #</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in employees)
            {
                <tr>
                    <td>@employee.Name</td>
                    <td>@employee.IdentityNumber</td>
                    <td>@employee.Birthdate.ToString("dd/MM/yyyy")</td>
                    <td>@employee.Email</td>
                    <td>
                        <button class="btn btn-sm btn-warning"
                                @onclick='@(() => Edit(employee.Id))'>
                            Edit
                        </button>
                        <button class="btn btn-sm btn-danger"
                                @onclick='@(() => Delete(employee.Id))'>
                            Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <ConfirmDelete @ref="confirmDeleteDialog" OnConfirm="PerformDelete" OnCancel="CancelDelete"></ConfirmDelete>
}
@code {
    List<EmployeeDto>? employees;
    ConfirmDelete? confirmDeleteDialog;
    int employeIdToDelete = 0;

    protected async override Task OnInitializedAsync()
    {
        employees = await EmployeeClient.GetAllAsync();
    }

    void Edit(int id)
    {
        Nav.NavigateTo($"/employees/edit/{id}");
    }

    async Task Delete(int id)
    {
        employeIdToDelete = id;
        confirmDeleteDialog?.Open();
    }

    async Task PerformDelete()
    {
        var isDeleted = await EmployeeClient.DeleteAsync(employeIdToDelete);

        if (isDeleted)
        {
            employees = await EmployeeClient.GetAllAsync();
            StateHasChanged();
        }
    }

    Task CancelDelete()
    {
        return Task.CompletedTask;
    }
}
